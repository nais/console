# console.nais.io
# https://gqlgen.com/getting-started/

scalar UUID
scalar Time

type Query {
    users(input: QueryUserInput): [User!]!
    teams: [Team!]!
}

# /api/v1/teams/<UUID>/users
type Mutation {
    createUser(input: CreateUserInput!): User!
    updateUser(input: UpdateUserInput!): User!
    createTeam(input: CreateTeamInput!): Team!
    addUsersToTeam(input: AddUsersToTeamInput!): Team!
}

input QueryUserInput {
    id: UUID
    email: String
    name: String
}

input CreateUserInput {
    email: String
    name: String!
}

input UpdateUserInput {
    id: UUID!
    email: String
    name: String
}

type User {
    # This is the identifier!!!!
    id: UUID!
    email: String
    name: String!
    teams: [Team!]!
    roles: [Role!]!
    created_at: Time
}

input AddUsersToTeamInput {
    userID: [UUID!]!
    teamID: UUID!
}

input CreateTeamInput {
    slug: String!
    name: String!
    purpose: String
}

type Team {
    id: UUID!
    slug: String!
    name: String!
    purpose: String
    roles: [Role!]!
    users: [User!]!
    metadata: [TeamMetadata!]!
}

type Role {
    id: UUID!
}

type TeamMetadata {
    id: UUID!
}

